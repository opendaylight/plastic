<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>plastic-runner</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>${plastic.runner.dir}</outputDirectory>
            <includes>
                <include>ReadMe.rst</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>${plastic.runner.dir}</outputDirectory>
            <includes>
                <include>plastic_runner</include>
                <include>example.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>${plastic.runner.dir}</outputDirectory>
            <includes>
                <include>*plastic*runner*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${plastic.runner.dir}/morphers</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${plastic.runner.dir}/schemas</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${plastic.runner.dir}/classifiers</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>docs</directory>
            <outputDirectory>${plastic.runner.dir}</outputDirectory>
            <includes>
                <include>*utorial*.rst</include>
                <include>*utorial*.pdf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>docs/tutorial</directory>
            <outputDirectory>${plastic.runner.dir}</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>docs/tutorial/schemas</directory>
            <outputDirectory>${plastic.runner.dir}/schemas</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>docs/tutorial/morphers</directory>
            <outputDirectory>${plastic.runner.dir}/morphers</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>docs/tutorial/classifiers</directory>
            <outputDirectory>${plastic.runner.dir}/classifiers</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>